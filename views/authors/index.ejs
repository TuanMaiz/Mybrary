<h2>Search Authors</h2>
<form action="/authors" method="GET">
    <label for="">Name</label>
    <input type="text" name="name" value="<%=searchOption.name%> ">
    <button type="submit">Search</button>
</form>
<br>
<!-- Loop for all author -->
<%  authors.forEach(author => { %> 
    <div><%=author.name%></div>
<% }) %> 
